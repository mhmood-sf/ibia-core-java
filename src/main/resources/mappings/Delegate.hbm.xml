<?xml version="1.0"?>

<!--
  ~ Hibernate, Relational Persistence for Idiomatic Java
  -->
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ibia.core.entities">

    <class name="Delegate" table="DELEGATES">
        <id name="id" type="java.lang.String" column="ID"/>
        <property name="name" type="java.lang.String" column="NAME"/>
        <property name="delegation" type="java.lang.String" column="DELEGATION"/>
        <property name="committeeId" type="java.lang.String" column="COMMITTEE_ID"/>
        <property name="speeches" type="int" column="SPEECHES"/>
        <property name="pois" type="int" column="POIS"/>
        <property name="motions" type="int" column="MOTIONS"/>
        <property name="time" type="int" column="TIME"/>
        <property name="amendments" type="int" column="AMENDMENTS"/>
    </class>

</hibernate-mapping>
